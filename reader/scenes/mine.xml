<dsx>
    <scene root="chao" axis_length="10.0"/>

    <views default="cam0">
        <perspective id="cam0" near="0.1" far="500" angle="57">
            <from x="100" y="100" z="100"/>
            <to x="0" y="0" z="0"/>
        </perspective>
        <perspective id="cam1" near="0.1" far="500" angle="57">
            <from x="200" y="200" z="300"/>
            <to x="0" y="20" z="0"/>
        </perspective>
    </views>

    <illumination doublesided="1" local="1">
        <ambient r="0.6" g="0.6" b="0.6" a="1.0"/>
        <background r="0" g="0" b="0" a="1.0"/>
    </illumination>

    <lights>
        <omni id="omni1" enabled="1">
            <location x="10" y="2.8" z="-10" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
            <specular r="0.4" g="0.4" b="0.4" a="1"/>
        </omni>

        <omni id="omni2" enabled="1">
            <location x="0" y="50" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
            <specular r="0.4" g="0.4" b="0.4" a="1"/>
        </omni>

        <spot id="umS" enabled="1" angle="10" exponent="3">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="0.0" y="0.0" z="0.0"/>
            <location x="20" y="200" z="15"/>
            <ambient r="0.1" g="0.1" b="0.1" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="0.1"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </spot>
    </lights>

    <textures>
        <texture id="metal" file="../resources/metal.jpg" length_s="10" length_t="10"/>
        <texture id="grass" file="../resources/grass.jpg" length_s="50" length_t="50"/>
        <texture id="red" file="../resources/red.jpg" length_s="1" length_t="1"/>
        <texture id="yellow" file="../resources/yellow.jpg" length_s="1" length_t="1"/>
        <texture id="sky" file="../resources/sky.jpg" length_s="100" length_t="100"/>
        <texture id="palha" file="../resources/palha.jpg" length_s="100" length_t="100"/>
        <texture id="bola" file="../resources/foolball.jpg" length_s="10" length_t="10"/>
        <texture id="tyre" file="../resources/tyre.jpg" length_s="100" length_t="100"/>
        <texture id="jante" file="../resources/jante.jpg" length_s="100" length_t="100"/>
        <texture id="FCP" file="../resources/FCP.jpg" length_s="3" length_t="3"/>
    </textures>

    <materials>
        <material id="baco">
            <emission r="0" g="0" b="0" a="1.0"/>
            <ambient r="0.8" g="0.6" b="0.6" a="1.0"/>
            <diffuse r="0.8" g="0.6" b="0.6" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
            <shininess value="100"/>
        </material>

        <material id="green">
            <emission r="0" g="0.1" b="0" a="1.0"/>
            <ambient r="0.5" g="0.5" b="0.6" a="1.0"/>
            <diffuse r="0.5" g="0.6" b="0.6" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
            <shininess value="100"/>
        </material>

        <material id="metal">
            <emission r="0.4" g="0.4" b="0.5" a="1.0"/>
            <ambient r="0.6" g="0.6" b="0.8" a="1.0"/>
            <diffuse r="0.8" g="0.6" b="0.6" a="1.0"/>
            <specular r="0.5" g="0.5" b="0.7" a="1.0"/>
            <shininess value="100"/>
        </material>

    </materials>

    <transformations>
        <transformation id="null">
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="base">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="base">
            <rectangle x1="-50" y1="-50" x2="50" y2="50"/>
        </primitive>
        <primitive id="cilindro">
            <cylinder top="3" base="3" height="10" slices="15" stacks="13"/>
        </primitive>
        <primitive id="esfera">
            <sphere radius="2" slices="12" stacks="12"/>
        </primitive>
        <primitive id="torus">
            <torus inner="8" outer="10" slices="15" loops="15"/>
        </primitive>
        <primitive id="tri">
            <triangle x1="0" y1="0" z1="0" x2="10" y2="0" z2="0" x3="10" y3="10" z3="0"/>
        </primitive>
    </primitives>

    <components>
        <component id="chao">
            <transformation>
                <transformationref id="null"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <componentref id="relva"/>
                <componentref id="carro"/>
                <componentref id="sky"/>
                <componentref id="sky2"/>
                <componentref id="palha"/>
                <componentref id="bola"/>
                <componentref id="pt"/>
                <componentref id="bandeira"/>
            </children>
        </component>

        <component id="sky">
            <transformation>
                <translate x="-50" y="50" z="-50"/>
                <scale x="3" y="1" z="2"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <primitiveref id="base"/>
            </children>
        </component>

        <component id="sky2">
            <transformation>
                <rotate axis="y" angle="90"/>
                <translate x="50" y="50" z="-50"/>
                <scale x="3" y="1" z="2"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <primitiveref id="base"/>
            </children>
        </component>

        <component id="relva">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="green"/>
            </materials>
            <texture id="grass"/>
            <children>
                <primitiveref id="base"/>
            </children>
        </component>

        <component id="carro">
            <transformation>
                <translate x="10" y="10" z="10"/>
                <scale x="2" y="2" z="2"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="metal"/>
            <children>
                <componentref id="corpoComboio"/>
                <componentref id="pneuSet"/>
                <componentref id="cabine"/>
            </children>
        </component>

        <component id="cabine">
            <transformation>

                <scale x="1" y="0.25" z="1.5"/>
                <translate x="0" y="10" z="-2"/>
                <rotate axis="x" angle="-90"/>

            </transformation>
            <materials>
                <material id="metal"/>
                <material id="baco"/>
                <material id="green"/>
            </materials>
            <texture id="yellow"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="corpoComboio">
            <transformation>
                <scale x="1" y="1" z="1.8"/>
                <translate x="0" y="0" z="-5"/>
            </transformation>
            <materials>
                <material id="metal"/>
                <material id="baco"/>
                <material id="green"/>
            </materials>
            <texture id="metal"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="pneuSet">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <scale x="1" y="1" z="0.15"/>
                <translate x="-5" y="-2" z="-20"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="red"/>
            <children>
                <componentref id="pneu1"/>
                <componentref id="pneu2"/>
                <componentref id="pneu3"/>
                <componentref id="pneu4"/>
            </children>
        </component>

        <component id="pneu1">
            <transformation>
                <rotate axis="y" angle="-180"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="borracha1">
            <transformation>
                <scale x="0.35" y="0.35" z="10"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="tyre"/>
            <children>
                <primitiveref id="torus"/>
            </children>
        </component>

        <component id="pneu2">
            <transformation>
                <translate x="0" y="0" z="40"/>

            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="pneu3">
            <transformation>
                <translate x="10" y="0" z="40"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="pneu4">
            <transformation>
                <translate x="10" y="0" z="0"/>
                <rotate axis="y" angle="-180"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="palha">
            <transformation>
                <translate x="-30" y="6" z="-30"/>
                <scale x="2" y="2" z="1"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="palha"/>
            <children>
                <componentref id="palha1"/>
                <componentref id="palha2"/>
                <componentref id="palha3"/>
            </children>
        </component>

        <component id="palha1">
            <transformation>
                <transformationref id="null"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="palha"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="palha2">
            <transformation>
                <translate x="7" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="palha"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="palha3">
            <transformation>
                <translate x="3.5" y="4.5" z="0"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="palha"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="bola">
            <transformation>
                <translate x="30" y="2" z="10"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="bola"/>
            <children>
                <primitiveref id="esfera"/>
            </children>
        </component>

        <component id="pt">
            <transformation>
                <translate x="10" y="48" z="-20"/>
                <rotate axis="x" angle="90"/>
                <scale x="0.5" y="0.5" z="5"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="metal"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="bandeira">
            <transformation>
                <translate x="-20" y="15" z="-20"/>
                <scale x="3" y="3" z="3"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="FCP"/>
            <children>
                <primitiveref id="tri"/>
            </children>
        </component>

    </components>
</dsx>
