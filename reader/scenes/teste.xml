<dsx>
    <!-- deve definir-se um objeto para raiz do grafo , assim -->
    <!-- como o comprimento dos tres eixos (cilindros) -->
    <scene root="teste123" axis_length="12"/>

    <views default="um">
        <perspective id="um" near="0.4" far="500" angle="0.1">
            <from x="15" y="15" z="15"/>
            <to x="0" y="0" z="0"/>
        </perspective>

        <perspective id="dois" near="0.4" far="500" angle="0.9">
            <from x="-10" y="20" z="10"/>
            <to x="0" y="0" z="0"/>
        </perspective>

    </views>

    <illumination doublesided="1" local="1">

        <ambient r="0.4" g="0.3" b="0.3" a="0.5"/>
        <background r="0.4" g="0.3" b="0.3" a="0.6"/>

    </illumination>

    <lights>

        <omni id="umO" enabled="1">
            <location x="2" y="5" z="5" w="0.0"/>
            <ambient r="0.1" g="0.1" b="0.1" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="0.1"/>
            <specular r="0.3" g="0.3" b="0.3" a="0.1"/>
        </omni>

        <omni id="doisO" enabled="1">
            <location x="1" y="15" z="1" w="0.0"/>
            <ambient r="0.3" g="0.3" b="0.3" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </omni>

        <spot id="umS" enabled="1" angle="10" exponent="3">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="0.0" y="0.0" z="0.0"/>
            <location x="-5" y="4" z="-5"/>
            <ambient r="0.1" g="0.1" b="0.1" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="0.1"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </spot>

        <spot id="doisS" enabled="1" angle="10" exponent="3">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="0.0" y="0.0" z="0.0"/>
            <location x="5" y="4" z="2"/>
            <ambient r="0.1" g="0.1" b="0.1" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="0.1"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </spot>

    </lights>

    <textures>

        <texture id="text1" file="textures/madeira.png" length_s="0.1" length_t="0.1"/>


    </textures>

    <materials>

        <!-- Deve existir um ou mais blocos "material" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <material id="material1">
            <emission r="0.1" g="0.2" b="0.3" a="0.4"/>
            <ambient r="0.5" g="0.6" b="0.7" a="0.8"/>
            <diffuse r="0.9" g="1" b="1.1" a="1.2"/>
            <specular r="1.3" g="1.4" b="1.5" a="1.6"/>
            <shininess value="2"/>
        </material>

    </materials>

    <transformations >
        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <transformation id="um">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <translate x="0.5" y="0.6" z="0.7"/>
            <translate x="0.1" y="0.2" z="0.3"/>
            <rotate axis="x" angle="50"/>
            <rotate axis="z" angle="70"/>
            <scale x="1" y="2" z="3"/>
        </transformation>
        <transformation id="dois">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <translate x="0.8" y="0.9" z="1"/>
            <rotate axis="y" angle="30"/>
            <scale x="4" y="5" z="6"/>
        </transformation>
    </transformations>

    <primitives>
            <primitive id="adeus">
              <rectangle x1="0" y1="10" x2="10" y2="10"/>
            </primitive>

            <primitive id="rect1">
                <rectangle x1="0" y1="1" x2="1.5" y2="2"/>
            </primitive>

            <primitive id="tri1">
                <triangle x1="1" y1="0" z1="0" x2="0" y2="4" z2="0" x3="0" y3="0" z3="0"/>
            </primitive>

            <primitive id="tri2">
                <triangle x1="3" y1="0" z1="0" x2="0" y2="0" z2="0" x3="3" y3="0" z3="3"/>
            </primitive>

            <primitive id="cyl1">
                <cylinder top="5" base="10" height="5" slices="15" stacks="13"/>
            </primitive>
            <primitive id="sph1">
                <sphere radius="5" slices="5" stacks="5"/>
            </primitive>
            <primitive id="tor1">
                <torus inner="2" outer="3" slices="5" loops="5"/>
            </primitive>
        </primitives>
    </dsx>
