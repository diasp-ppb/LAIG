<dsx>
    <scene root="gameBoardTest" axis_length="20.0"/>

    <views default="cam0">
        <perspective id="cam0" near="0.1" far="500" angle="57">
            <from x="0" y="0" z="4"/>
            <to x="0" y="0" z="0"/>
        </perspective>
        <perspective id="cam1" near="0.1" far="500" angle="57">
            <from x="-10" y="10" z="-10"/>
            <to x="0" y="0" z="0"/>
        </perspective>
    </views>

    <illumination doublesided="1" local="1">
        <ambient r="0.6" g="0.6" b="0.6" a="1.0"/>
        <background r="0" g="0" b="0" a="1.0"/>
    </illumination>

    <lights>
        <omni id="omni1" enabled="1">
            <location x="10" y="2.8" z="-10" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
            <specular r="0.4" g="0.4" b="0.4" a="1"/>
        </omni>

        <omni id="omni2" enabled="1">
            <location x="0" y="50" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
            <specular r="0.4" g="0.4" b="0.4" a="1"/>
        </omni>

        <spot id="umS" enabled="1" angle="10" exponent="3">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="0.0" y="0.0" z="0.0"/>
            <location x="20" y="200" z="15"/>
            <ambient r="0.1" g="0.1" b="0.1" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="0.1"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </spot>
    </lights>

    <textures>
        <texture id="metal" file="../resources/metal.png" length_s="10" length_t="10"/>
        <texture id="grass" file="../resources/grass.png" length_s="50" length_t="50"/>
        <texture id="sky" file="../resources/sky.png" length_s="100" length_t="100"/>
    </textures>

    <materials>
        <material id="baco">
            <emission r="0" g="0" b="0" a="1.0"/>
            <ambient r="0.8" g="0.6" b="0.6" a="1.0"/>
            <diffuse r="0.8" g="0.6" b="0.6" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
            <shininess value="100"/>
        </material>

        <material id="green">
            <emission r="0" g="0.1" b="0" a="1.0"/>
            <ambient r="0.5" g="0.5" b="0.6" a="1.0"/>
            <diffuse r="0.5" g="0.6" b="0.6" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
            <shininess value="100"/>
        </material>

        <material id="metal">
            <emission r="0.4" g="0.4" b="0.5" a="1.0"/>
            <ambient r="0.6" g="0.6" b="0.8" a="1.0"/>
            <diffuse r="0.8" g="0.6" b="0.6" a="1.0"/>
            <specular r="0.5" g="0.5" b="0.7" a="1.0"/>
            <shininess value="100"/>
        </material>

    </materials>

    <transformations>
        <transformation id="null">
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="base">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <animations>
        <animation id="ani1" span="3" type="circular" centerx="0" centery="0" centerz="0" radius="20" startang="0" rotang="360"/>
        <animation id="ani2" span="3" type="circular" centerx="0" centery="0" centerz="0" radius="20" startang="180" rotang="-360"/>
        <animation id="ani3" span="0.6" type="linear">
            <controlpoint xx="0" yy="0" zz="0"/>
            <controlpoint xx="0" yy="0" zz="20"/>
        </animation>
        <animation id="ani4" span="2" type="circular" centerx="0" centery="0" centerz="0" radius="20" startang="0" rotang="270"/>
        <animation id="ani5" span="0.6" type="linear">
            <controlpoint xx="0" yy="0" zz="0"/>
            <controlpoint xx="20" yy="0" zz="0"/>
        </animation>
        <animation id="olaaa" span="3" type="perspective" clock="1">
          <perspectiveref id="cam0"/>
          <perspectiveref id="cam1"/>
        </animation>
    </animations>

    <primitives>
        <primitive id="base">
            <rectangle x1="-50" y1="-50" x2="50" y2="50"/>
        </primitive>
        <primitive id="cilindro">
            <cylinder top="3" base="3" height="10" slices="15" stacks="13"/>
        </primitive>
        <primitive id="esfera">
            <sphere radius="2" slices="12" stacks="12"/>
        </primitive>
        <primitive id="torus">
            <torus inner="8" outer="10" slices="15" loops="15"/>
        </primitive>
        <primitive id="tri">
            <triangle x1="0" y1="0" z1="0" x2="10" y2="0" z2="0" x3="10" y3="10" z3="0"/>
        </primitive>

        <primitive id="tank">
            <vehicle/>
        </primitive>

        <primitive id="plane">
            <plane dimX="120" dimY="120" partsX="13" partsY="13"/>
        </primitive>

        <primitive id="fundo">
            <plane dimX="100" dimY="70" partsX="13" partsY="13"/>
        </primitive>

        <primitive id="guapa">
            <chessboard du="8" dv="8" textureref="metal" su="1" sv="1">
                <c1 r="0.7" g="0.1" b="0.2" a="1"/>
                <c2 r="0.1" g="0.7" b="0.2" a="1"/>
                <cs r="0.1" g="0.2" b="0.7" a="1"/>
            </chessboard>

        </primitive>



                <primitive id="teste123485">
                    <gameBoard/>
                </primitive>

        <primitive id="guapa2">
            <chessboard du="8" dv="8" textureref="metal" su="5" sv="5">
                <c1 r="0.7" g="0.1" b="0.2" a="1"/>
                <c2 r="0.1" g="0.7" b="0.2" a="1"/>
                <cs r="0.1" g="0.2" b="0.7" a="1"/>
            </chessboard>

        </primitive>

    </primitives>

    <components>

        <component id="base">
            <transformation>
                <transformationref id="null"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <componentref id="carro"/>
                <componentref id="chao"/>
                <componentref id="sky"/>
                <componentref id="sky2"/>
                <componentref id="chess"/>
                <componentref id="chess2"/>
                <componentref id="gameBoardTest"/>
            </children>
        </component>

        <component id="chess">
            <transformation>
                <translate x="5" y="1" z="5"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="guapa"/>
            </children>
        </component>

        <component id="gameBoardTest">
            <transformation>

            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="teste123485"/>
            </children>
        </component>

        <component id="chess2">
            <transformation>
                <translate x="2" y="1" z="5"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="guapa2"/>
            </children>
        </component>

        <component id="chao">
            <transformation>
                <translate x="0" y="-1" z="0"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="grass"/>
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id="sky">
            <transformation>
                <rotate axis="z" angle="-180"/>
                <translate x="0" y="0" z="-50"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id="sky2">
            <transformation>
                <rotate axis="z" angle="-180"/>
                <rotate axis="y" angle="-90"/>
                <translate x="0" y="0" z="-50"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <primitiveref id="plane"/>
            </children>
        </component>

        <component id="carro">
            <transformation></transformation>
            <animation>
                <animationref id="ani1"/>
                <animationref id="ani2"/>
                <animationref id="ani3"/>
                <animationref id="ani4"/>
                <animationref id="ani5"/>
            </animation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="metal"/>
            <children>
                <primitiveref id="tank"/>
                <componentref id="carro2"/>
            </children>
        </component>

        <component id="carro2">
            <transformation>
                <translate x="8" y="0" z="8"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="metal"/>
            <children>
                <primitiveref id="tank"/>
                <componentref id="carro3"/>
            </children>
        </component>

        <component id="carro3">
            <transformation>
                <translate x="-16" y="0" z="0"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="metal"/>
            <children>
                <primitiveref id="tank"/>
            </children>
        </component>

    </components>
</dsx>
