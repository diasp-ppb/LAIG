<dsx>
    <!-- deve definir-se um objeto para raiz do grafo , assim -->
    <!-- como o comprimento dos tres eixos (cilindros) -->
    <scene root="teste123" axis_length="12"/>

    <views default="um">
        <perspective id="um" near="0.4" far="500" angle="0.1">
            <from x="15" y="15" z="15"/>
            <to x="0" y="0" z="0"/>
        </perspective>

        <perspective id="dois" near="0.4" far="500" angle="0.9">
            <from x="10" y="0" z="10"/>
            <to x="0" y="0" z="0"/>
        </perspective>

    </views>

    <illumination doublesided="1" local="1">

        <ambient r="0.1" g="0.1" b="0.1" a="1"/>
        <background r="0.07" g="0.5" b="1" a="0.63"/>

    </illumination>

    <lights>

        <omni id="umO" enabled="1">
            <location x="0.5" y="0.6" z="0.7" w="0.8"/>
            <ambient r="0.9" g="1.0" b="1.1" a="1.2"/>
            <diffuse r="1.3" g="1.4" b="1.5" a="1.6"/>
            <specular r="1.7" g="1.8" b="1.9" a="2.0"/>
        </omni>

        <spot id="umS" enabled="1" angle="50" exponent="0.7">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="2.1" y="2.2" z="2.3"/>
            <location x="2.4" y="2.5" z="2.6"/>
            <ambient r="2.7" g="2.8" b="2.9" a="3.0"/>
            <diffuse r="3.1" g="3.2" b="3.3" a="3.4"/>
            <specular r="3.5" g="3.6" b="3.7" a="3.8"/>
        </spot>
        <spot id="doisS" enabled="1" angle="20.3" exponent="0.8">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="3.9" y="4.0" z="4.1"/>
            <location x="4.2" y="4.3" z="4.4"/>
            <ambient r="4.5" g="4.6" b="4.7" a="4.8"/>
            <diffuse r="4.9" g="5.0" b="5.1" a="5.2"/>
            <specular r="5.3" g="5.4" b="5.5" a="5.6"/>
        </spot>

    </lights>

    <textures>

        <texture id="text1" file="SpiderPig.png" length_s="3.0" length_t="2.0"/>
        <texture id="text2" file="PokemonEder.png" length_s="4.0" length_t="1.0"/>

    </textures>

    <materials>

        <!-- Deve existir um ou mais blocos "material" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <material id="material1">
            <emission r="0.1" g="0.2" b="0.3" a="0.4"/>
            <ambient r="0.5" g="0.6" b="0.7" a="0.8"/>
            <diffuse r="0.9" g="1" b="1.1" a="1.2"/>
            <specular r="1.3" g="1.4" b="1.5" a="1.6"/>
            <shininess value="2"/>
        </material>

    </materials>

    <transformations >
        <!-- Deve existir um ou mais blocos "transformation" -->
        <!-- Os identificadores "id" nao podem ser repetidos -->
        <transformation id="um">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <translate x="0.5" y="0.6" z="0.7"/>
            <rotate axis="x" angle="50"/>
            <scale x="1" y="2" z="3"/>
        </transformation>
        <transformation id="dois">
            <!-- instrucoes a usar sem limite nem ordem -->
            <!-- deve existir pelo menos uma transformacao -->
            <translate x="0.8" y="0.9" z="1"/>
            <rotate axis="y" angle="30"/>
            <scale x="4" y="5" z="6"/>
        </transformation>
    </transformations>

    <primitives>
      <primitive id="adeus">
        <rectangle x1="0" y1="1" x2="1" y2="2"/>
      </primitive>
    </primitives>
</dsx>
