<dsx>
    <scene root="chao" axis_length="20.0"/>

    <views default="cam0">
        <perspective id="cam0" near="0.1" far="500" angle="57">
            <from x="50" y="50" z="50"/>
            <to x="0" y="0" z="0"/>
        </perspective>
        <perspective id="cam1" near="0.1" far="500" angle="57">
            <from x="200" y="200" z="300"/>
            <to x="0" y="20" z="0"/>
        </perspective>
        <perspective id="cam3" near="0.1" far="500" angle="57">
            <from x="0.1" y="120" z="0.1"/>
            <to x="0" y="0" z="0"/>
        </perspective>
    </views>

    <illumination doublesided="1" local="1">
        <ambient r="0.6" g="0.6" b="0.6" a="1.0"/>
        <background r="0" g="0" b="0" a="1.0"/>
    </illumination>

    <lights>
        <omni id="omni1" enabled="1">
            <location x="10" y="2.8" z="-10" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
            <specular r="0.4" g="0.4" b="0.4" a="1"/>
        </omni>

        <omni id="omni2" enabled="1">
            <location x="0" y="50" z="0" w="1"/>
            <ambient r="0" g="0" b="0" a="1.0"/>
            <diffuse r="0.6" g="0.6" b="0.6" a="1"/>
            <specular r="0.4" g="0.4" b="0.4" a="1"/>
        </omni>

        <spot id="umS" enabled="1" angle="10" exponent="3">
            <!-- atencao, "target" e' diferente de "direction" -->
            <target x="0.0" y="0.0" z="0.0"/>
            <location x="20" y="200" z="15"/>
            <ambient r="0.1" g="0.1" b="0.1" a="0.1"/>
            <diffuse r="0.1" g="0.1" b="0.1" a="0.1"/>
            <specular r="0.1" g="0.1" b="0.1" a="0.1"/>
        </spot>
    </lights>

    <textures>
        <texture id="metal" file="../resources/metal.png" length_s="10" length_t="10"/>
        <texture id="grass" file="../resources/grass.png" length_s="50" length_t="50"/>
        <texture id="red" file="../resources/red.png" length_s="1" length_t="1"/>
        <texture id="yellow" file="../resources/yellow.png" length_s="1" length_t="1"/>
        <texture id="sky" file="../resources/sky.png" length_s="100" length_t="100"/>
        <texture id="palha" file="../resources/palha.png" length_s="100" length_t="100"/>
        <texture id="bola" file="../resources/foolball.png" length_s="10" length_t="10"/>
        <texture id="tyre" file="../resources/tyre.png" length_s="100" length_t="100"/>
        <texture id="jante" file="../resources/jante.png" length_s="100" length_t="100"/>
        <texture id="FCP" file="../resources/FCP.png" length_s="3" length_t="3"/>
    </textures>

    <materials>
        <material id="baco">
            <emission r="0" g="0" b="0" a="1.0"/>
            <ambient r="0.8" g="0.6" b="0.6" a="1.0"/>
            <diffuse r="0.8" g="0.6" b="0.6" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
            <shininess value="100"/>
        </material>

        <material id="green">
            <emission r="0" g="0.1" b="0" a="1.0"/>
            <ambient r="0.5" g="0.5" b="0.6" a="1.0"/>
            <diffuse r="0.5" g="0.6" b="0.6" a="1.0"/>
            <specular r="0" g="0" b="0" a="1.0"/>
            <shininess value="100"/>
        </material>

        <material id="metal">
            <emission r="0.4" g="0.4" b="0.5" a="1.0"/>
            <ambient r="0.6" g="0.6" b="0.8" a="1.0"/>
            <diffuse r="0.8" g="0.6" b="0.6" a="1.0"/>
            <specular r="0.5" g="0.5" b="0.7" a="1.0"/>
            <shininess value="100"/>
        </material>

    </materials>

    <transformations>
        <transformation id="null">
            <translate x="0" y="0" z="0"/>
        </transformation>

        <transformation id="base">
            <translate x="0" y="0" z="0"/>
        </transformation>
    </transformations>

    <animations>
        <animation id="ani1" span="3" type="circular" centerx="0" centery="0" centerz="0" radius="20" startang="0" rotang="360"/>
        <animation id="ani2" span="3" type="circular" centerx="0" centery="0" centerz="0" radius="20" startang="180" rotang="-360"/>
        <animation id="ani3" span="0.6" type="linear">
            <controlpoint xx="0" yy="0" zz="0"/>
            <controlpoint xx="0" yy="0" zz="20"/>
        </animation>
        <animation id="ani4" span="2" type="circular" centerx="0" centery="0" centerz="0" radius="20" startang="0" rotang="270"/>
        <animation id="ani5" span="0.6" type="linear">
            <controlpoint xx="0" yy="0" zz="0"/>
            <controlpoint xx="20" yy="0" zz="0"/>
        </animation>
    </animations>

    <primitives>
        <primitive id="base">
            <rectangle x1="-50" y1="-50" x2="50" y2="50"/>
        </primitive>
        <primitive id="cilindro">
            <cylinder top="3" base="3" height="10" slices="15" stacks="13"/>
        </primitive>
        <primitive id="esfera">
            <sphere radius="2" slices="12" stacks="12"/>
        </primitive>
        <primitive id="torus">
            <torus inner="8" outer="10" slices="15" loops="15"/>
        </primitive>
        <primitive id="tri">
            <triangle x1="0" y1="0" z1="0" x2="10" y2="0" z2="0" x3="10" y3="10" z3="0"/>
        </primitive>
    </primitives>

    <components>

        <component id="chao">
            <transformation>
                <transformationref id="null"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="sky"/>
            <children>
                <componentref id="carro"/>
            </children>
        </component>
        <component id="carro">
            <transformation></transformation>
            <animation>
                <animationref id="ani1"/>
                <animationref id="ani2"/>
                <animationref id="ani3"/>
                <animationref id="ani4"/>
                <animationref id="ani5"/>
            </animation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="metal"/>
            <children>
                <componentref id="corpoComboio"/>
                <componentref id="pneuSet"/>
                <componentref id="cabine"/>
            </children>
        </component>

        <component id="cabine">
            <transformation>
                <scale x="1" y="0.25" z="1.5"/>
                <translate x="0" y="10" z="-2"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="metal"/>
                <material id="baco"/>
                <material id="green"/>
            </materials>
            <texture id="yellow"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="corpoComboio">
            <transformation>
                <scale x="1" y="1" z="1.8"/>
                <translate x="0" y="0" z="-5"/>
            </transformation>
            <materials>
                <material id="metal"/>
                <material id="baco"/>
                <material id="green"/>
            </materials>
            <texture id="metal"/>
            <children>
                <primitiveref id="cilindro"/>
            </children>
        </component>

        <component id="pneuSet">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <scale x="1" y="1" z="0.15"/>
                <translate x="-5" y="-2" z="-20"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="red"/>
            <children>
                <componentref id="pneu1"/>
                <componentref id="pneu2"/>
                <componentref id="pneu3"/>
                <componentref id="pneu4"/>
            </children>
        </component>

        <component id="pneu1">
            <transformation>
                <rotate axis="y" angle="-180"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="borracha1">
            <transformation>
                <scale x="0.35" y="0.35" z="10"/>
            </transformation>
            <materials>
                <material id="baco"/>
            </materials>
            <texture id="tyre"/>
            <children>
                <primitiveref id="torus"/>
            </children>
        </component>

        <component id="pneu2">
            <transformation>
                <translate x="0" y="0" z="40"/>

            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="pneu3">
            <transformation>
                <translate x="10" y="0" z="40"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

        <component id="pneu4">
            <transformation>
                <translate x="10" y="0" z="0"/>
                <rotate axis="y" angle="-180"/>
            </transformation>
            <materials>
                <material id="metal"/>
            </materials>
            <texture id="jante"/>
            <children>
                <primitiveref id="cilindro"/>
                <componentref id="borracha1"/>
            </children>
        </component>

    </components>
</dsx>
